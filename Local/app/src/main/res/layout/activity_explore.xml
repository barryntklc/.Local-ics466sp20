<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreActivity" >

    <include
        android:id="@id/toolbar"
        layout="@layout/custom_toolbar"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/new_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:fabCustomSize="70dp"
            android:onClick="newPostButtonClicked"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_post_button" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/center_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="8dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="end"
            android:onClick="centerCameraButtonClicked"
            app:backgroundTint="@color/colorTextWhite"
            app:fabCustomSize="40dp"
            app:layout_anchor="@+id/new_post_button"
            app:layout_anchorGravity="right"
            app:layout_constraintRight_toRightOf="parent"
            app:useCompatPadding="true"
            app:srcCompat="@drawable/ic_center_location" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</fragment>